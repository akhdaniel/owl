<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<data>
    
    
    <!-- Form view for "model" -->
    <record id="project_edit_project2" model="ir.ui.view">
        <field name="name">project_edit_project2</field>
        <field name="model">project.project</field>
         <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_button_box']" position="inside">
                <button class="oe_stat_button" name="view_gantt" type="object" icon="fa-area-chart" groups="project.group_project_manager">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">
                            Gantt Chart
                        </span>
                    </div>
                </button>                
            </xpath>
        </field>
    </record>
    
    
</data>
</odoo>