<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="vit_owl_todo.list">
      <field name="name">vit_owl_todo list</field>
      <field name="model">vit.vit_owl_todo</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="color" widget="color"/>
          <field name="completed"/>
        </tree>
      </field>
    </record>


    <record model="ir.ui.view" id="vit_owl_todo.form">
      <field name="name">vit_owl_todo form</field>
      <field name="model">vit.vit_owl_todo</field>
      <field name="arch" type="xml">
        <form string="To Do">
          <group>
            <field name="name"/>
            <field name="color" widget="color"/>
            <field name="completed"/>
          </group>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="vit_owl_todo.action_window">
      <field name="name">To Do List</field>
      <field name="res_model">vit.vit_owl_todo</field>
      <field name="view_mode">tree,form</field>
    </record>



    <menuitem name="OWL Tutorial" id="vit_owl_todo.menu_root"/>


    <menuitem name="To Do List" id="vit_owl_todo.menu_1_list" parent="vit_owl_todo.menu_root"
              action="vit_owl_todo.action_window"/>


    <record id="action_todo_list" model="ir.actions.client">
        <field name="name">Todo List</field>
        <field name="tag">vit_owl_todo.action_todo_list_js</field>
    </record>

    <menuitem name="To Do List OWL" id="vit_owl_todo.menu_2_list" parent="vit_owl_todo.menu_root"
              action="vit_owl_todo.action_todo_list"/>


  </data>
</odoo>