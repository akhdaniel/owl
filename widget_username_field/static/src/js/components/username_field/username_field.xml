<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="widget_username_field.UsernameField" t-inherit="web.CharField">
        <xpath expr="//input" position="attributes">
            <attribute name="style" add="width: auto" separator=" "/>
        </xpath>
          
        <xpath expr="//input" position="after">
            <span class="input-group-text border-0 rounded-0" style="display: inline-block">
                @<t t-esc="emailDomain"/>
            </span>
        </xpath>
    </t>
</templates>