<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="vit_progressbar_timer.PrintLabelButton">
        <button t-attf-class="w-100 btn btn-sm text-center {{props.record.data[props.name] ? 'btn-danger':'btn-success'}}"
                t-attf-style="color: {{props.color}}"
                t-on-click.prevent.stop="update">
            <i t-attf-class="fa {{props.icon}}"/> <t t-out="props.label"/>
        </button>
    </t>

</templates>
