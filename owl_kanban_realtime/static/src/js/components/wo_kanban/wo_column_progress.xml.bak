<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="vit_progressbar_timer.ColumnProgress" t-inherit="web.ColumnProgress" t-inherit-mode="primary">
        <xpath expr="//div[@class='o_column_progress progress bg-300 w-75']" position="after">
            <i class="mx-1 fa fa-clock-o"></i>
        </xpath>
        <AnimatedNumber position="after">
            <t t-set="expAggregate" t-value="getDurationExpectedGroupAggregate(props.group)"/>
            <AnimatedNumber
                value="expAggregate.value"
                title="expAggregate.title"
                duration="1000"
                animationClass="'o_animated_grow_huge'">
                <t t-set-slot="prefix"><strong> / </strong></t>
            </AnimatedNumber>
        </AnimatedNumber>
    </t>
</templates>
