<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="owl_kanban_realtime.WOKanbanController" t-inherit="web.KanbanView">
        <xpath expr="//t[@t-component='props.Renderer']" position="before">

            <!-- Modal -->
            <div class="modal fade" id="printModal" tabindex="-1" aria-labelledby="printModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="printModalLabel">Preview</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <div id="html_data">
                    </div>
                    <div id="print_data" style="display:none">
                    </div>
                    <div id="wo_id" style="display:none">
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="printFunc()">Print</button>
                  </div>
                </div>
              </div>
            </div>
        </xpath>
    </t>
</templates>
