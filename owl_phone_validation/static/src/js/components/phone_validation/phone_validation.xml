<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="owl_phone_validation.PhoneValidation" >
        <div class="row">
            <div class="col">
                <h1 class="p-3">Phone Number Checker</h1>
                <div class="row px-5 vh-100 overflow-y-auto">
                    <div class="col-lg-6 p-5">
                        <div class="h1 mb-3">
                            International Phone Number input
                        </div>
                        <div class="mb-3">
                            <label for="phone" class="form-label me-2">Phone</label>
                            <input type="tel" class="form-control" t-ref="phone" id="phone"/>
                        </div>


                        <div t-if="state.phoneValid === false" class="alert alert-danger">Phone is not Valid</div>
                        <div t-if="state.phoneValid === true" class="alert alert-success">Phone is Valid</div>
                        <button class="btn btn-primary" t-on-click="validate">Validate</button>
                    </div>
                    
                    
                </div>
            </div>
        </div>
    </t>
</templates>